#include <PWM.h>

int 16 ajuste_pwm_1;
int 16 ajuste_pwm_2;


void main()
{
	setup_adc_ports(NO_ANALOGS, VSS_VDD);

	while(TRUE)
	{

	pwm_on(MOTOR_1);
	pwm_on(MOTOR_2);
 	
	delay_ms(2000);
	pwm_off(MOTOR_1);
	delay_ms(2000);
	pwm_off(MOTOR_2);
	delay_ms(2000);
 	
	pwm_on(MOTOR_1);
	for(ajuste_pwm_1= 10, ajuste_pwm_1 = 100, ajuste_pwm_1 += 10){
	delay_ms(1000);
	}
	pwm_off(MOTOR_1);
 	
	pwm_on(MOTOR_2);
	for(ajuste_pwm_2= 10, ajuste_pwm_2 = 100, ajuste_pwm_2 += 10){
	delay_ms(1000);
	}
	pwm_off(MOTOR_2);
 	
 	

	}

}
