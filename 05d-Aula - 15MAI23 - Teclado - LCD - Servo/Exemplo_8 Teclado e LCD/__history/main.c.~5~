#include <main.h>

#define use_portb_kbd TRUE
#include <KBD.C>

#define LCD_DATA_PORT getenv("SFR:PORTD")   
#include <lcd.c>


void main()
{
	char k;

	setup_adc_ports(NO_ANALOGS, VSS_VDD);
	kbd_init();

   lcd_init();

	lcd_putc("\fReady...\n");

	while(TRUE)
	{

		//Example using external LCD
		k = kbd_getc();
		if(k!=0)
			if(k=='*')
				lcd_putc('\f');
			else
				lcd_putc(k);

		//TODO: User Code

		//TODO: User Code
	}

}
